<h1>New Group</h1>
<hr>

<%= form_for @group do |f|%>
  <% if @group.errors.any?%>
  <ul>
    <% @group.errors.full_messages.each do |msg|%>
      <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>
  Title
  <%= f.text_field :title%>
  <br>
  Description
  <%= f.text_area :description%>
  <br>
  <%= f.submit "submit", :disable_with => 'submitting....'%>
<% end %>
