<div class="container text-center">
  <h1><%= @group.title%></h1>

  <p><%= @group.description%></p>
</div>
<div class="container">
  <div class="pull-right">
    <% if current_user && current_user.is_member_of?(@group)%>
      <label class="label label-success">Groups</label>
      <%= link_to("Quit Group", quit_group_path(@group),method: :post, class: "btn btn-default")%>
    <% else %>
      <label  class="label label-danger">stranger</label>
      <%= link_to("Join Group", join_group_path(@group), method: :post, class: "btn btn-default")%>
    <% end %>
  </div>
  <table class="table table-hover">
    <% @posts.each do |post|%>
      <tr>
        <td><%= post.content%></td>
        <td><%= post.user.email%></td>
      </tr>
    <% end %>
  </table>
  <div class="text-center">
    <%= will_paginate @posts%>
  </div>
</div>
<div class="container">
  <% if current_user.is_member_of?(@group)%>
    <%= simple_form_for [@group,@post] do |f|%>
      <%= f.input :content%>
      <%= f.submit "submit", data: { disable_with: "submitting...."}%>
    <% end %>
  <% else %>
    <h1 class="text-center">Join this group and write a posts</h1>
  <% end %>
</div>
